<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_set_assortment_barcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_selector_button_side_theme"
                android:drawableRight="@drawable/keyboard_arrow_right_white_48dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/btn_atribuire_barcodului"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_stock_assortment" />

            <Button
                android:id="@+id/btn_create_assortment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_selector_button_side_theme"
                android:drawableRight="@drawable/keyboard_arrow_right_white_48dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/btn_adauga_produs"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_set_assortment_barcode" />

            <Button
                android:id="@+id/btn_transfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_selector_button_side_theme"
                android:drawableRight="@drawable/keyboard_arrow_right_white_48dp"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/btn_transfer_main_activity"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_inventory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_invoice"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_stock_assortment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_selector_button_side_theme"
                android:drawableRight="@drawable/keyboard_arrow_right_white_48dp"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/btn_stock_asl_main_activity"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_set_assortment_barcode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_inventory" />

            <Button
                android:id="@+id/btn_inventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_selector_button_side_theme"
                android:drawableRight="@drawable/keyboard_arrow_right_white_48dp"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/btn_inventariere_main_activity"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_stock_assortment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_transfer"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_sales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_selector_button_side_theme"
                android:drawableRight="@drawable/keyboard_arrow_right_white_48dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/btn_sales_main_activity"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_invoice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_check_price"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_invoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_selector_button_side_theme"
                android:drawableRight="@drawable/keyboard_arrow_right_white_48dp"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/btn_invoice_main_activity"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_transfer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_sales"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_check_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_selector_button_side_theme"
                android:drawableRight="@drawable/keyboard_arrow_right_white_48dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/btn_check_price"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_sales"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_create_assortment"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/is_log" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>

